<UserControl x:Class="FilterPanelTest.FilterTree.FilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilterPanelTest.FilterTree"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="White"
             Background="Transparent"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Orientation="Horizontal">
        <UserControl x:Name="FilterDatePanel" 
                     Content="{Binding FilterDate}"  
                     Margin="20,0,0,0" 
                     VerticalAlignment="Center" />
        <UserControl x:Name="FilterCCPanel" 
                     Content="{Binding FilterCC}"  
                     Margin="20,0,0,0" 
                     VerticalAlignment="Center" />
        <UserControl x:Name="FilterERPanel" 
                     Content="{Binding FilterER}"  
                     Margin="20,0,0,0" 
                     VerticalAlignment="Center" />
    </StackPanel>
    
</UserControl>
